<Window x:Class="ThreadPriorityDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Приоритеты потоков" Height="300" Width="400">
    <StackPanel Margin="10">
        <TextBlock Text="Поток 1 (Lowest)" />
        <TextBlock x:Name="txt1" Height="25" Margin="0,0,0,5"/>
        <TextBlock Text="Поток 2 (Normal)" />
        <TextBlock x:Name="txt2" Height="25" Margin="0,0,0,5"/>
        <TextBlock Text="Поток 3 (Highest)" />
        <TextBlock x:Name="txt3" Height="25" Margin="0,0,0,5"/>
        <Button Content="Запустить" Click="StartThreads_Click" Margin="0,10,0,0"/>
        <TextBlock x:Name="resultText" Margin="0,10,0,0"/>
    </StackPanel>
</Window>