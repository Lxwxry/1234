<Window x:Class="ThreadDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Потоки и Dispatcher" Height="250" Width="400">
    <StackPanel Margin="10">
        <ProgressBar x:Name="progressBar" Height="25" Minimum="0" Maximum="100" Margin="0,0,0,10"/>
        <Button Content="Запустить поток с ProgressBar" Click="StartProgress_Click" Margin="0,0,0,10"/>
        <Button Content="Запустить поток с высоким приоритетом" Click="StartHighPriority_Click" Margin="0,0,0,10"/>
        <Button Content="Попробовать без Dispatcher (ошибка)" Click="StartWithoutDispatcher_Click"/>
        <TextBlock x:Name="statusText" Text="" Margin="0,10,0,0"/>
    </StackPanel>
</Window>